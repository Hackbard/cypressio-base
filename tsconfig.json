{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/support/*": ["./cypress/support/*"],
      "@/pages/*": ["./cypress/pages/*"]
    },
    "module": "amd",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "types": ["cypress", "node"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*.ts"]
}
